<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="SettingsBlockBackground" Color="{StaticResource Gray900}" />
    <SolidColorBrush x:Key="SettingsBlockWarningHighlight" Color="{StaticResource Yellow700}" />

    <Style x:Key="SettingsBlockStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SettingsBlockBackground}"/>
        <Setter Property="CornerRadius" Value="{StaticResource GlobalCornerRadius}"/>
        <Setter Property="Margin" Value="0,0,0,7"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="{StaticResource SettingsBlockBackground}"/>
        <Setter Property="BorderThickness" Value="3"/>
        
    </Style>
        
</ResourceDictionary>